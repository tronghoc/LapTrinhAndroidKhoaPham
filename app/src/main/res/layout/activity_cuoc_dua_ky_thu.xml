<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBox
        android:id="@+id/checkBoxThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <CheckBox
        android:id="@+id/checkBoxTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBoxThree" />
    <CheckBox
        android:layout_above="@+id/checkBoxTwo"
    android:id="@+id/checkBoxOne"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/seebarThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@+id/checkBoxOne"
        android:max="200"
        android:thumb="@drawable/bird" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/seebarTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seebarThree"
        android:layout_marginBottom="18dp"
        android:layout_toRightOf="@+id/checkBoxTwo"
        android:max="200"
        android:thumb="@drawable/buffalo" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/seebarOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seebarTwo"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/checkBoxOne"
        android:max="200"
        android:thumb="@drawable/turtle" />
    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo2"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <TextView
        android:id="@+id/txtDiemSo"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="40dp"
        android:text="100"
        android:textColor="#D81515"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_next_foreground"
        android:layout_width="120dp"
        android:layout_height="30dp"/>
</RelativeLayout>